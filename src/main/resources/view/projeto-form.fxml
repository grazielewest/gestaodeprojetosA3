<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.ProjetoFormController"
            style="-fx-padding: 20;">

    <VBox spacing="15" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Text text="Formulário de Projeto" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints prefWidth="100"/>
                <ColumnConstraints prefWidth="300"/>
            </columnConstraints>

            <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nomeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Descrição:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="descricaoField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefRowCount="3"/>

            <Label text="Status:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="statusComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Data Início:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dataInicioPicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Data Fim:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dataFimPicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Orçamento:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="orcamentoField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10" style="-fx-padding: 20 0 0 0;">
            <Button text="Salvar" onAction="#handleSalvar" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-pref-width: 100px;"/>
            <Button text="Cancelar" onAction="#handleCancelar" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-pref-width: 100px;"/>
        </HBox>
    </VBox>
</AnchorPane>