<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.DashboardController">
    <top>
        <MenuBar>
            <Menu text="Arquivo">
                <MenuItem text="Sair" onAction="#handleSair"/>
            </Menu>
            <Menu text="Projetos">
                <MenuItem text="Gerenciar Projetos" onAction="#handleGerenciarProjetos"/>
                <MenuItem text="Novo Projeto" onAction="#handleNovoProjeto"/>
            </Menu>
            <Menu text="Relatórios">
                <MenuItem text="Relatório de Projetos"/>
                <MenuItem text="Relatório de Tarefas"/>
            </Menu>
            <Menu text="Ajuda">
                <MenuItem text="Sobre"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <TabPane>
            <Tab text="Dashboard">
                <VBox spacing="20" style="-fx-padding: 20;">
                    <Label text="Bem-vindo ao Sistema de Gestão de Projetos" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                    <HBox spacing="20">
                        <VBox style="-fx-background-color: #007bff; -fx-padding: 20; -fx-background-radius: 10;" spacing="10">
                            <Label text="Projetos Ativos" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                            <Label text="25" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                        </VBox>

                        <VBox style="-fx-background-color: #28a745; -fx-padding: 20; -fx-background-radius: 10;" spacing="10">
                            <Label text="Tarefas Pendentes" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                            <Label text="134" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                        </VBox>

                        <VBox style="-fx-background-color: #dc3545; -fx-padding: 20; -fx-background-radius: 10;" spacing="10">
                            <Label text="Atrasos" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                            <Label text="8" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                        </VBox>
                    </HBox>
                </VBox>
            </Tab>

            <Tab text="Projetos">
                <VBox spacing="10" style="-fx-padding: 20;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button text="Novo Projeto" style="-fx-background-color: #28a745; -fx-text-fill: white;" onAction="#handleNovoProjeto"/>
                        <Button text="Editar" style="-fx-background-color: #007bff; -fx-text-fill: white;"/>
                        <Button text="Excluir" style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
                    </HBox>

                    <TableView fx:id="tabelaProjetos" style="-fx-pref-height: 400px;">
                        <columns>
                            <TableColumn text="ID" prefWidth="50"/>
                            <TableColumn text="Nome" prefWidth="200"/>
                            <TableColumn text="Status" prefWidth="100"/>
                            <TableColumn text="Data Início" prefWidth="100"/>
                            <TableColumn text="Data Fim" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <bottom>
        <StatusBar>
            <Label text="Usuário: admin | Sistema: Gestão de Projetos v1.0"/>
        </StatusBar>
    </bottom>
</BorderPane>
