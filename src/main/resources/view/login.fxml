<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginController">
    <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Text text="Sistema de Gestão de Projetos" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 20; -fx-background-color: #f5f5f5; -fx-border-radius: 5; -fx-background-radius: 5;">
            <Label text="Login" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <TextField fx:id="usernameField" promptText="Usuário" style="-fx-pref-width: 200px;"/>
            <PasswordField fx:id="passwordField" promptText="Senha" style="-fx-pref-width: 200px;"/>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Entrar" onAction="#handleLogin" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-pref-width: 100px;"/>
                <Button text="Criar Conta" onAction="#handleCriarUsuarioRapido" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-pref-width: 100px;"/>
            </HBox>

            <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-visible: false;"/>
        </VBox>

        <Label text="Use: admin / 123" style="-fx-text-fill: #666;"/>
        <Label text="Ou crie uma nova conta" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
    </VBox>
</AnchorPane>